@page
@model ResultsModel
@{
    ViewData["Title"] = "Analysis Results";
}

<div class="results-container">
    <h1 class="results-title">Analysis Results</h1>

    <div class="result-card">
        <h2 class="result-header">Analysis</h2>
        <div class="result-content">
            @Html.Raw(Model.LlmResult.Replace("\n", "<br>"))
        </div>
    </div>

    <div class="text-center mt-4">
        <p>If you would like to consult with a specialist, please visit our recommended specialists page.</p>
        <a href="/RecommendedSpecialists" class="btn btn-primary">View Recommended Specialists</a>
    </div>
</div>

<style>
    .results-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
    }

    .results-title {
        text-align: center;
        color: #333;
        margin-bottom: 2rem;
    }

    .result-card {
        background-color: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .result-header {
        color: #007bff;
        margin-bottom: 1rem;
    }

    .result-content {
        font-size: 1.1rem;
        line-height: 1.6;
        color: #333;
    }

    .specialist-list {
        list-style-type: none;
        padding-left: 0;
    }

    .specialist-list li {
        margin-bottom: 1rem;
    }

    .specialist-list a {
        color: #007bff;
        text-decoration: none;
    }

    .specialist-list a:hover {
        text-decoration: underline;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        display: inline-block;
        margin-top: 1rem;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }
</style>