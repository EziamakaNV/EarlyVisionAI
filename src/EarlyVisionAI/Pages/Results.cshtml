@page
@model ResultsModel
@{
    ViewData["Title"] = "Analysis Results";
}

<div class="results-container">
    <h1 class="results-title">Analysis Results</h1>

    <div class="result-card">
        <h2 class="result-header">LLM Analysis</h2>
        <div class="result-content">
            @Html.Raw(Model.LlmResult.Replace("\n", "<br>"))
        </div>
    </div>
</div>

<style>
    .results-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
    }

    .results-title {
        text-align: center;
        color: #333;
        margin-bottom: 2rem;
    }

    .result-card {
        background-color: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .result-header {
        color: #007bff;
        margin-bottom: 1rem;
    }

    .result-content {
        font-size: 1.1rem;
        line-height: 1.6;
        color: #333;
    }
</style>