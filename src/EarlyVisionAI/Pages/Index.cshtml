@page
@model IndexModel
@{
    ViewData["Title"] = "Early Vision AI - Cancer Detection";
}

<div class="container mt-5">
    <h1 class="mb-4">Early Vision AI - Cancer Detection</h1>

    <div class="row">
        <div class="col-md-8">
            <p class="lead">
                Welcome to Early Vision AI, an advanced tool designed to assist doctors in early cancer detection for African American individuals. Our service leverages cutting-edge AI technology to analyze skin images, identifying potential signs of cancer.
            </p>
            <p>
                To get started, simply upload your medical images. Our AI will analyze the images and return the results.
            </p>
        </div>
    </div>

    <form id="uploadForm" method="post" enctype="multipart/form-data" class="mt-4">
        <div class="mb-3">
            <label for="images" class="form-label">Upload Medical Images:</label>
            <input type="file" class="form-control" id="images" name="Image" accept="image/*" required>
            <div class="form-text">Upload a skin image for analysis.</div>
        </div>
        <button type="submit" class="btn btn-primary">Submit for Analysis</button>
    </form>

    <div class="mt-5">
        <h2>How It Works</h2>
        <ol>
            <li>Upload your skin photo.</li>
            <li>Our AI analyzes the images for potential signs of cancer.</li>
            <li>You receive a detailed analysis on whether you need to seek further medical advice from a professional.</li>
        </ol>
    </div>

    <div class="mt-4">
        <h2>Privacy and Security</h2>
        <p>
            We take your privacy seriously. All uploaded images and analysis results are processed securely and are not stored permanently on our servers. For more information, please read our <a href="#">Privacy Policy</a>.
        </p>
    </div>
</div>

<!-- Loading Modal -->
<div class="modal fade" id="loadingModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="loadingModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body text-center">
                <div class="spinner-border text-primary mb-3" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <h5>Analyzing... Please wait a moment</h5>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            var loadingModal = new bootstrap.Modal(document.getElementById('loadingModal'), {
                keyboard: false
            });

            $('#uploadForm').submit(function(event) {
                var fileInput = $('#images');
                var files = fileInput[0].files;
                if (files.length === 0) {
                    alert('Please select at least one image to upload.');
                    event.preventDefault();
                } else {
                    loadingModal.show();
                }
            });
        });
    </script>
}